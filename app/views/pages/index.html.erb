<h1>Pages#index</h1>
<p>Find me in app/views/pages/index.html.erb</p>

<div class="pages index">
  <h2>Pages</h2>

  <%= link_to("Add New Page", new_page_path, :class => 'action new') %>

  <table class="listing" summary="Page list">
    <tr class="header">
      <th>#</th>
      <th>Subject ID</th>
      <th>Page</th>
      <th>Permalink</th>
      <th>Visible</th>
      <th>Sections</th>
      <th>Actions</th>

    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.position %></td>
      <td><%= page.subject_id%></td>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
      <%#=<td class="center"><%= page.visible ? 'Yes' : 'No' %>
      <%#= This is using the CUSTOM Helpers in application_helpher.rb%>
      <td class="center"><%= status_tag(page.visible) %>      <td class="center"><%= page.sections.size %></td>
      <td class="actions">
        <%= link_to("Show", page_path(page), :class => 'action show') %>
        <%= link_to("Edit", edit_page_path(page), :class => 'action edit') %>
        <%= link_to("Delete", delete_page_path(page), :class => 'action delete') %>
      </td>

    </tr>
    <% end %>
  </table>
</div>
